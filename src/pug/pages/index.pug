                                                                a(class="frame__menu-link" href="#")="events"
                                                            li.frame__menu-item
                                                                a(class="frame__menu-link" href="#")="guides"
                                                    .frame__content-actions
                                                        button(class="frame__content-btn button button_borderless button_small")="Log in"
                                                .frame__content-body
                                                    .frame__profile
                                                        .frame__profile-avatar-wrap
                                                            .frame__profile-avatar
                                                                img(src="/assets/img/avatar.jpg", alt="avatar")
                                                            span.frame__profile-tag="PRO"
                                                        h4.frame__profile-name="Elynia Cosplay"
                                                    ul.frame__content-tabs
                                                        li(class="frame__content-tab frame__content-tab_active")="Portfolio"
                                                        li(class="frame__content-tab")="blog"
                                                        li(class="frame__content-tab")="video"
                                                        li(class="frame__content-tab")="Store"
                                                        li(class="frame__content-tab")="following"
                                                        li(class="frame__content-tab")="followers"
                                                    .frame__tab-content
                                                        ul.frame__works-list
                                                            li.frame__works-item
                                                                img(src="/assets/img/portfolio1.jpg", alt="portfolio_item")
                                                            li.frame__works-item
                                                                img(src="/assets/img/portfolio2.jpg", alt="portfolio_item")
                                                            li.frame__works-item
                                                                img(src="/assets/img/portfolio3.jpg", alt="portfolio_item")


