html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700;800&display=swap" rel="stylesheet")
        title="Craftverse"
    body
        .wrapper
            header.header
                div(class="container container_large")
                    .header__body
                        .logo
                            a(href="/") 
                                img(src="/assets/img/logo.svg", alt="logo")
                        nav.header__menu
                            ul.header__menu-list
                                li.header__menu-item
                                    a(class="header__menu-link" href="#")="Blog"
                                li.header__menu-item
                                    a(class="header__menu-link" href="#")="FAQ"
                                li.header__menu-item
                                    a(class="header__menu-link" href="#")="About us"
            main.main
                section.homepage
                    .container
                        .homepage__body
                            div(class="homepage__text" data-aos="fade-right")
                                h1.homepage__title="Welcome"
                                    br
                                    !="to Craftverse"
                                p.homepage__desc="Craftverse is an online community for cosplayers to share, learn, and connect. It’s a first of its kind community for cosplayers and crafters to exchange secrets, make a name for themselves, and explore business opportunities."
                                form(class="homepage__form subscription-form")
                                    .subscription-form__input-wrap
                                        .subscription-form__input-icon
                                            img(src="/assets/img/email.svg", alt="email")
                                        input(class="subscription-form__input" type="email" placeholder="Email")
                                    button(class="subscription-form__button button")="Get Early Access"
                section.engage
                    .container
                        .engage__body
                            .engage__text
                                h3.engage__title="Engage in the community"
                                p.engage__desc="Our mission at Craftverse is to give cosplay professionals and enthusiasts alike a space to showcase their craft, inspire, explore lucrative opportunities, and unlock their potential ina safe industry-friendly environment."
                            div(class="engade__frame frame")
                                .frame__tabs
                                    input(type="radio", name="tab", id="tab-1", value="", checked)
                                    label(class="frame__tab" for="tab-1")="Portfolio"     
                                    input(type="radio", name="tab", id="tab-2", value="")
                                    label(class="frame__tab" for="tab-2")="Home Page"

                                    div(class="frame__tab-content" id="tab-content-1")
                                        .frame__body
                                            .frame__header
                                                ul.frame__header-dots
                                                    li.frame__header-dot
                                                    li.frame__header-dot
                                                    li.frame__header-dot
                                            .frame__content
                                                .frame__content-header
                                                    .frame__content-logo
                                                        img(src="/assets/img/logo.svg", alt="logo")
                                                    .frame__content-menu
                                                        ul.frame__menu-list
                                                            li.frame__menu-item
                                                                a(class="frame__menu-link" href="#")="activity"
                                                            li.frame__menu-item
                                                                a(class="frame__menu-link" href="#")="learning"
                                                            li.frame__menu-item
                                                                a(class="frame__menu-link" href="#")="marketplace"
